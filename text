def MonoalphabeticDec(ciphertext, key):
    key.lower()
    intCipher = int(ciphertext)
    intKey = int(key)
    if len(intKey) != 26:
        print ("Please enter 26 key for this cipher")
    Alphabet = 'abcdefghijklmnopqrstuvwxyz'
    intAlphabet = int(Alphabet)
    cipherAlphabet = key
    decryptmessage = []
    for i in range(len(intCipher)):
        for j in range(len(intAlphabet)):
            if  cipherAlphabet[j] == ciphertext[i]:
                decryptmessage.append(Alphabet[j])
                break
    return ("".join(decryptmessage))
